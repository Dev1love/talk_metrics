# Docker Environment Configuration
# Copy this file to .env and fill in the required values

# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4

# WhatsApp API Configuration (Wazzup or similar)
WHATSAPP_API_URL=https://api.wazzup24.com
WHATSAPP_API_TOKEN=your_whatsapp_api_token_here

# Security Configuration
JWT_SECRET=your_jwt_secret_here_change_in_production_use_strong_secret
SESSION_SECRET=your_session_secret_here_change_in_production_use_strong_secret

# Database Configuration (automatically managed by Docker Compose)
# These are set in docker-compose.yml and don't need to be changed
# DB_HOST=postgres
# DB_PORT=5432
# DB_NAME=talk_metrics
# DB_USER=talk_metrics_user
# DB_PASSWORD=talk_metrics_password